{
  "name": "shootilt",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --host",
    "build:dev": "tsc && vite build -m development",
    "build:prod": "tsc && vite build"
  },
  "dependencies": {
    "pixi.js": "^6.5.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@vitejs/plugin-basic-ssl": "^0.1.2",
    "typescript": "~4.3.5",
    "vite": "^3.2.3",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true,
    "importOrder": [
      "^@assets/(.*)$",
      "^@game$",
      "^@game/models/(.*)$",
      "^@game/states/(.*)$",
      "^@game/systems/(.*)$",
      "^@game/utils/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}

